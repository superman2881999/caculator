<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/layout_main"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:text="0"
        android:background="#DFDFDF"
        android:gravity="right"
        android:id="@+id/tvResult"
        android:textSize="100sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:layout_weight="1">

        <Button
            android:id="@+id/nutCE"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="CE"
            android:textSize="40sp"
            android:layout_marginRight="5dp"
            android:background="#CCCCCC"
            android:layout_weight="1"></Button>
        <Button
            android:id="@+id/nutC"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="C"
            android:layout_marginRight="5dp"
            android:textSize="40sp"
            android:background="#CCCCCC"
            android:layout_weight="1"></Button>
        <Button
            android:id="@+id/nutBS"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="BS"
            android:layout_marginRight="5dp"
            android:background="#CCCCCC"
            android:textSize="40sp"
            android:layout_weight="1"></Button>
        <Button
            android:id="@+id/phepChia"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="/"
            android:background="#CCCCCC"
            android:textSize="40sp"
            android:layout_weight="1"></Button>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:layout_weight="1">

        <Button
            android:id="@+id/So7"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="7"
            android:layout_marginRight="5dp"
            android:background="#EFEFEF"
            android:textSize="40sp"
            android:layout_weight="1"></Button>
        <Button
            android:id="@+id/So8"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="8"
            android:layout_marginRight="5dp"
            android:background="#EFEFEF"
            android:textSize="40sp"
            android:layout_weight="1"></Button>
        <Button
            android:id="@+id/So9"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="9"
            android:layout_marginRight="5dp"
            android:background="#EFEFEF"
            android:textSize="40sp"
            android:layout_weight="1"></Button>
        <Button
            android:id="@+id/phepNhan"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="*"
            android:background="#CCCCCC"
            android:textSize="40sp"
            android:layout_weight="1"></Button></LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:layout_weight="1">

        <Button
            android:id="@+id/So4"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="4"
            android:layout_marginLeft="2dp"
            android:layout_marginRight="5dp"
            android:background="#EFEFEF"
            android:textSize="40sp"
            android:layout_weight="1"></Button>
        <Button
            android:id="@+id/So5"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="5"
            android:layout_marginRight="5dp"
            android:background="#EFEFEF"
            android:textSize="40sp"
            android:layout_weight="1"></Button>
        <Button
            android:id="@+id/So6"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="6"
            android:layout_marginRight="5dp"
            android:background="#EFEFEF"
            android:textSize="40sp"
            android:layout_weight="1"></Button>
        <Button
            android:id="@+id/phepCong"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="+"
            android:background="#CCCCCC"
            android:textSize="40sp"
            android:layout_weight="1"></Button></LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:layout_weight="1">

        <Button
            android:id="@+id/So1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="1"
            android:layout_marginLeft="2dp"
            android:layout_marginRight="5dp"
            android:background="#EFEFEF"
            android:textSize="40sp"
            android:layout_weight="1"></Button>
        <Button
            android:id="@+id/So2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="2"
            android:layout_marginRight="5dp"
            android:background="#EFEFEF"
            android:textSize="40sp"
            android:layout_weight="1"></Button>
        <Button
            android:id="@+id/So3"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="3"
            android:layout_marginRight="5dp"
            android:background="#EFEFEF"
            android:textSize="40sp"
            android:layout_weight="1"></Button>
        <Button
            android:id="@+id/phepTru"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="-"
            android:background="#CCCCCC"
            android:textSize="40sp"
            android:layout_weight="1"></Button></LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:layout_weight="1">

        <Button
            android:id="@+id/AmHoacDuong"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="+/-"
            android:background="#CCCCCC"
            android:layout_marginLeft="2dp"
            android:layout_marginRight="5dp"
            android:textSize="40sp"
            android:layout_weight="1"></Button>
        <Button
            android:id="@+id/So0"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="0"
            android:layout_marginRight="5dp"
            android:background="#EFEFEF"
            android:textSize="40sp"
            android:layout_weight="1"></Button>
        <Button
            android:id="@+id/dauCham"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="."
            android:background="#CCCCCC"
            android:layout_marginRight="5dp"
            android:textSize="40sp"
            android:layout_weight="1"></Button>
        <Button
            android:id="@+id/dauBang"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="="
            android:background="#CCCCCC"
            android:textSize="40sp"
            android:layout_weight="1"></Button></LinearLayout>

</LinearLayout>




